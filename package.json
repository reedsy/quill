{
  "name": "@reedsy/quill",
  "version": "2.0.0-reedsy-3.0.1",
  "description": "Your powerful, rich text editor",
  "author": "Jason Chen <jhchen7@gmail.com>",
  "homepage": "http://quilljs.com",
  "main": "dist/quill.js",
  "types": "quill.d.ts",
  "config": {
    "ports": {
      "proxy": "9000",
      "gatsby": "4000",
      "karma": "9876",
      "webpack": "9080"
    }
  },
  "workspaces": [
    "website"
  ],
  "dependencies": {
    "@reedsy/quill-delta": "^5.1.0-reedsy.2.1.0",
    "eventemitter3": "^4.0.7",
    "fast-deep-equal": "^3.1.3",
    "lodash.clonedeep": "^4.5.0",
    "lodash.merge": "^4.5.0",
    "parchment": "^3.0.0-alpha.1",
    "rfdc": "^1.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@playwright/test": "^1.34.3",
    "@types/jasmine": "^4.3.0",
    "@types/lodash.clonedeep": "^4.5.7",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "babel-loader": "^9.1.2",
    "babel-plugin-istanbul": "^6.1.1",
    "css-loader": "^6.8.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-webpack": "^0.13.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "highlight.js": "^9.18.1",
    "html-loader": "^4.2.0",
    "http-proxy": "^1.18.0",
    "jasmine": "^4.4.0",
    "jasmine-core": "^4.4.0",
    "karma": "^6.4.2",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "^2.2.0",
    "karma-jasmine": "^5.1.0",
    "karma-sauce-launcher": "^4.3.6",
    "lodash": "^4.17.15",
    "mini-css-extract-plugin": "^2.7.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "style-loader": "^3.3.3",
    "stylus": "^0.59.0",
    "stylus-loader": "^7.1.2",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "webpack": "^5.87.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "git://github.com/reedsy/quill.git"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid"
  },
  "browserslist": [
    "defaults"
  ],
  "scripts": {
    "build": "npm run build:typescript && npm run build:webpack",
    "build:typescript": "tsc",
    "build:webpack": "webpack --config _develop/webpack.config.js",
    "build:release": "./_develop/scripts/release.sh",
    "develop": "npm run start",
    "lint": "npm run lint:eslint && npm run lint:tsc",
    "lint:eslint": "eslint .",
    "lint:tsc": "tsc --noEmit --skipLibCheck",
    "prepare": "npm run build",
    "start": "USE_LOCAL_FILE=true run-p start:*",
    "start:webpack": "webpack-dev-server --config _develop/webpack.config.js",
    "start:website": "run-s website:build website:serve",
    "start:karma": "karma start _develop/karma.config.js --no-single-run --no-browsers",
    "start:proxy": "node _develop/proxy.js",
    "website:build": "npm run build -w website",
    "website:serve": "npm run serve -w website -- --port $npm_package_config_ports_gatsby",
    "website:develop": "npm run develop -w website -- --port $npm_package_config_ports_gatsby",
    "test": "npm run test:unit; npm run test:random",
    "test:all": "npm run test:unit; npm run test:functional; npm run test:random",
    "test:e2e": "npx playwright test",
    "test:unit": "npm run build; karma start _develop/karma.config.js",
    "test:unit:ci": "npm run build; karma start _develop/karma.config.js --reporters dots,saucelabs",
    "test:random": "ts-node --preferTsExts -O '{\"module\":\"commonjs\"}' ./node_modules/.bin/jasmine test/random.ts",
    "test:coverage": "webpack --env.coverage --config _develop/webpack.config.js; karma start _develop/karma.config.js --reporters coverage",
    "travis": "npm test"
  },
  "overrides": {
    "saucelabs": "^7.2.2",
    "webdriverio": "^7.31.1"
  },
  "keywords": [
    "editor",
    "rich text",
    "wysiwyg"
  ]
}
